{
    "name": "vsce-convertruby",
    "displayName": "Convert Ruby",
    "description": "ルビ記法を変換する、Visual Studio Codeの機能拡張です。",
    "version": "0.0.1",
    "publisher": "8amjp",
    "engines": {
        "vscode": "^1.27.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "images/icon.png",
    "activationEvents": [
        "onCommand:extension.rubyNotationToParentheses"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.rubyNotationToParentheses",
                "title": "Ruby: ルビ記法を括弧書きに変換"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "resourceLangId == markdown",
                    "command": "extension.rubyNotationToParentheses",
                    "group": "navigation"
                },
                {
                    "when": "resourceLangId == plaintext",
                    "command": "extension.rubyNotationToParentheses",
                    "group": "navigation"
                }
            ]
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/8amjp/vsce-convertruby.git"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
